#include "Button.h"

uint8_t stateChange(uint8_t* flag, uint8_t* modeState){
	if (*flag = 1) {
		*modeState++;
		uint8_t stateData;
		switch (*modeState) {
		case STOP:
			stateData = 0x10;
			break;
		case MANUAL:
			stateData = 0x20;
			break;
		case AUTO:
			stateData = 0x30;
			break;
		default:
			modeState = STOP;
			break;
		}
		*flag=0;
		return stateData;
	}

}
